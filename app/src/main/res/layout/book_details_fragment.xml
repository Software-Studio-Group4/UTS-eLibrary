<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_fragment_paper_bg"
    tools:context=".BookDetailsFragment">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/back_button_left"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="52dp"
        android:textColor="#444A81"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="190dp"
        android:layout_height="318dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:ignore="MissingConstraints"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/borrowReturnCtn"
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/borrow_return_ctn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.678"
        app:layout_constraintStart_toEndOf="@+id/bookCover"
        app:layout_constraintTop_toTopOf="@+id/bookCover"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/borrowBtn"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textColor="#6A6A6A"
        app:layout_constraintEnd_toEndOf="@+id/borrowReturnCtn"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="@+id/borrowReturnCtn"
        app:layout_constraintTop_toTopOf="@+id/borrowReturnCtn"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/returnBtn"
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@+id/borrowReturnCtn"
        app:layout_constraintEnd_toEndOf="@+id/borrowReturnCtn"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/borrowReturnCtn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/borrowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Borrow"
        android:textColor="#444A81"
        app:layout_constraintEnd_toEndOf="@+id/borrowReturnCtn"
        app:layout_constraintStart_toStartOf="@+id/borrowReturnCtn"
        app:layout_constraintTop_toTopOf="@+id/borrowReturnCtn" />

    <TextView
        android:id="@+id/returnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Return"
        android:textColor="#444A81"
        app:layout_constraintBottom_toBottomOf="@+id/borrowReturnCtn"
        app:layout_constraintEnd_toEndOf="@+id/borrowReturnCtn"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/borrowReturnCtn" />

    <ImageView
        android:id="@+id/lineImage"
        android:layout_width="115dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/line"
        app:layout_constraintEnd_toEndOf="@+id/borrowReturnCtn"
        app:layout_constraintStart_toStartOf="@+id/borrowReturnCtn"
        app:layout_constraintTop_toTopOf="@+id/borrowReturnCtn"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/authorText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:textColor="#636363"
        app:layout_constraintEnd_toEndOf="@+id/borrowReturnCtn"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toEndOf="@+id/bookCover"
        app:layout_constraintTop_toBottomOf="@+id/borrowReturnCtn" />

    <TextView
        android:id="@+id/genreText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#636363"
        app:layout_constraintEnd_toEndOf="@+id/borrowReturnCtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/authorText"
        app:layout_constraintTop_toBottomOf="@+id/authorText" />

    <TextView
        android:id="@+id/publishedYearText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#636363"
        app:layout_constraintEnd_toEndOf="@+id/borrowReturnCtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/authorText"
        app:layout_constraintTop_toBottomOf="@+id/genreText" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:textColor="#636363"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bookCover"
        app:layout_constraintTop_toBottomOf="@+id/bookCover" />

</androidx.constraintlayout.widget.ConstraintLayout>