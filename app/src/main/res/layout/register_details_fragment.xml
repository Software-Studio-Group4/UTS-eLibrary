<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="460dp"
    android:layout_height="400dp"
    android:background="@drawable/registration_fbg"
    tools:context=".RegisterEmailPassFragment">

    <EditText
        android:id="@+id/mobileNumTf"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:backgroundTint="#575757"
        android:maxLength="10"
        android:ems="10"
        android:hint="Mobile No."
        android:inputType="phone"
        android:shadowColor="#FFFFFF"
        android:text=""
        android:textColor="#575757"
        android:textColorHighlight="#575757"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="#575757"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/firstTextView"
        app:layout_constraintTop_toBottomOf="@+id/uniIDTf"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/uniIDTf"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:backgroundTint="#575757"
        android:ems="10"
        android:hint="Student ID"
        android:maxLength="8"
        android:inputType="number"
        android:shadowColor="#FFFFFF"
        android:text=""
        android:textColor="#575757"
        android:textColorHighlight="#575757"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="#575757"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/firstTextView"
        app:layout_constraintTop_toBottomOf="@+id/lastNameTf"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/lastNameTf"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:backgroundTint="#575757"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#575757"
        android:textColorHighlight="#575757"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="#575757"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/firstTextView"
        app:layout_constraintTop_toBottomOf="@+id/firstNameTf"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/firstNameTf"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:backgroundTint="#575757"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#575757"
        android:textColorHighlight="#575757"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="#575757"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/firstTextView"
        app:layout_constraintTop_toBottomOf="@+id/firstTextView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/firstTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-medium"
        android:text="Enter your details"
        android:textColor="#444A81"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>