<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_bg">

    <EditText
        android:id="@+id/publishedYearTf"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/authorTf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:backgroundTint="#575757"
        android:ems="10"
        android:hint="Published Year"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#575757"
        android:textColorHighlight="#575757"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="#575757"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/publisherTf"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/enterDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="116dp"
        android:fontFamily="sans-serif-medium"
        android:text="Enter book details"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/bookTitleTf"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/enterDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:autofillHints=""
        android:backgroundTint="#575757"
        android:ems="10"
        android:hint="Book Title"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#575757"
        android:textColorHighlight="#575757"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="#575757"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterDetails"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/authorTf"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/bookTitleTf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:backgroundTint="#575757"
        android:ems="10"
        android:hint="Author"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#575757"
        android:textColorHighlight="#575757"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="#575757"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookTitleTf"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/publisherTf"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/authorTf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:backgroundTint="#575757"
        android:ems="10"
        android:hint="Publisher"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#575757"
        android:textColorHighlight="#575757"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:textColorLink="#575757"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorTf"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/genreSpinner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/publisherTf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:entries="@array/genre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/publishedYearTf"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookImage"
        app:layout_constraintVertical_bias="0.008"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_below="@id/genreSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genreSpinner"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>